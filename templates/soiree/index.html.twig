{% extends 'base.html.twig' %}

{% block title %}Soiree index{% endblock %}

{% block body %}
    <h1>Soiree index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Day</th>
                <th>Time</th>
                <th>End</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for soiree in soirees %}
            <tr>
                <td>{{ soiree.id }}</td>
                <td>{{ soiree.day ? soiree.day|date('Y-m-d') : '' }}</td>
                <td>{{ soiree.time ? soiree.time|date('H:i:s') : '' }}</td>
                <td>{{ soiree.end ? soiree.end|date('H:i:s') : '' }}</td>
                <td>{{ soiree.price }}</td>
                <td>
                    <a href="{{ path('soiree_show', {'id': soiree.id}) }}">show</a>
                    <a href="{{ path('soiree_edit', {'id': soiree.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('soiree_new') }}">Create new</a>
{% endblock %}
